// DDL for our database

CREATE TABLE Class (
    Class_Id int NOT NULL AUTO_INCREMENT,
    Class_Name varchar(255),
    PRIMARY KEY(Class_Id)
);

CREATE TABLE Alignment (
    Alignment_Id int NOT NULL AUTO_INCREMENT,
    Lawful_Chaotic varchar(255),
    Good_Evil varchar(255),
    PRIMARY KEY(Alignment_Id)
);

CREATE TABLE Description (
    Description_Id int NOT NULL AUTO_INCREMENT,
    Description_String varchar(255),
    PRIMARY KEY(Description_Id)
);

CREATE TABLE Origin (
    Origin_Id int NOT NULL AUTO_INCREMENT,
    Origin_String varchar(255),
    PRIMARY KEY(Origin_Id)
);

CREATE TABLE Quirk (
    Quirk_Id int NOT NULL AUTO_INCREMENT,
    Quirk_String varchar(255),
    PRIMARY KEY(Quirk_Id)
);

CREATE TABLE Race (
    Race_Id int NOT NULL AUTO_INCREMENT,
    Race_String varchar(255),
    PRIMARY KEY(Race_Id)
);

// Insert DML models

INSERT INTO Class (Class_Name)
VALUES (class_name);

INSERT INTO Description (Description_String)
VALUES (description);

INSERT INTO Origin (Origin_String)
VALUES (origin);

INSERT INTO Quirk (Quirk_String)
VALUES (quirk);

INSERT INTO Race (Race_String)
VALUES (race);

// Insert DML for Alignment, all records

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Lawful', 'Good');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Lawful', 'Neutral');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Lawful', 'Evil');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Neutral', 'Good');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Neutral', 'Neutral');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Neutral', 'Evil');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Chaotic', 'Good');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Chaotic', 'Neutral');

INSERT INTO Alignment (Lawful_Chaotic, Good_Evil)
VALUES ('Chaotic', 'Evil');

